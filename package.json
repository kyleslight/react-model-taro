{
  "name": "react-model-taro",
  "version": "0.0.1",
  "description": "The Hooks State management library for Taro",
  "main": "./dist/react-model-taro.js",
  "umd:main": "./dist/react-model-taro.umd.js",
  "types": "./src/index",
  "scripts": {
    "build": "microbundle -o ./dist",
    "commit": "git-cz",
    "lint-ts": "tslint -c tslint.json 'src/**/*.ts'",
    "lint-md": "remark ."
  },
  "keywords": [
    "react",
    "model",
    "state-management",
    "react-hooks",
    "taro"
  ],
  "author": "Kyles Light <likelakes07@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "7.4.4",
    "immer": "3.0.0"
  },
  "peerDependencies": {
    "@tarojs/taro": "1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@tarojs/plugin-babel": "1.3.0",
    "@types/babel__core": "7.1.1",
    "@types/babel__template": "7.0.2",
    "@types/node": "12.0.0",
    "babel-preset-env": "1.6.1",
    "commitizen": "3.0.7",
    "cz-conventional-changelog": "2.1.0",
    "husky": "2.0.0",
    "microbundle": "0.11.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "prettier": "1.16.4",
    "remark-cli": "6.0.1",
    "remark-lint": "6.0.4",
    "remark-preset-lint-recommended": "3.0.2",
    "tslint": "5.14.0",
    "typescript": "3.4.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyleslight/react-model-taro"
  },
  "bugs": {
    "url": "https://github.com/kyleslight/react-model-taro/issues"
  },
  "homepage": "https://github.com/kyleslight/react-model-taro#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
